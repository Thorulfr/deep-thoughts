    "license": "GPL-3.0-or-later",
    "bugs": {
        "url": "https://github.com/Thorulfr/deep-thoughts/issues"
    },
    "homepage": "https://github.com/Thorulfr/deep-thoughts#readme",
    "devDependencies": {
        "concurrently": "^7.0.0"
    }
}
